<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="start"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- Container của tin nhắn -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/super_gray"
        android:padding="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:clipToPadding="false">

        <!-- TextView để hiển thị username -->
        <TextView
            android:id="@+id/textViewUsernameIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:layout_marginBottom="0dp" />

        <!-- TextView để hiển thị nội dung tin nhắn -->
        <TextView
            android:id="@+id/textViewMessageIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:textColor="@color/white"
            android:padding="8dp"
            android:textSize="14sp" />

        <!-- TextView để hiển thị timestamp -->
        <TextView
            android:id="@+id/textViewTimestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textColor="@color/white"
            android:layout_marginTop="0dp"
            android:layout_gravity="start" />
    </LinearLayout>
</LinearLayout>
