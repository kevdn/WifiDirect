<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="end"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- Khối màu tím -->
    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@color/teams_purple"
        android:padding="8dp"
        android:layout_margin="8dp">

        <!-- TextView để hiển thị username -->
        <TextView
            android:id="@+id/textViewUsernameOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="To: huy"
            android:textSize="12sp"
            android:textStyle="italic"
            android:textColor="@color/white"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:paddingBottom="0dp" />

        <!-- TextView để hiển thị nội dung tin nhắn -->
        <TextView
            android:id="@+id/textViewMessageOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This is a message"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:layout_below="@id/textViewUsernameOut"
            android:layout_alignParentStart="true"
            android:layout_marginTop="4dp" />

        <!-- TextView để hiển thị timestamp -->
        <TextView
            android:id="@+id/textViewTimestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:16"
            android:textSize="10sp"
            android:textStyle="italic"
            android:textColor="@color/white"
            android:layout_below="@id/textViewMessageOut"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp" />
    </RelativeLayout>
</LinearLayout>
